---
interface Props {
    /** HTML id attribute for the board element */
    id?: string;
    /** Number of columns (categories) */
    cols?: number;
    /** Number of rows (questions per category + header) */
    rows?: number;
}

const { id = "board", cols = 5, rows = 6 } = Astro.props;
---

<section
    id={id}
    class="board"
    aria-live="polite"
    style={`--cols: ${cols}; --rows: ${rows};`}
>
    <slot />
</section>

<style is:global>
    .board {
        --cols: 5;
        --rows: 6;
        display: grid;
        grid-template-columns: repeat(var(--cols), 1fr);
        grid-auto-rows: 120px;
        gap: 6px;
        background: #8b4513;
        padding: 6px;
        border-radius: 10px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
        min-height: 60vh;
        position: relative;
        z-index: 1000;
    }
</style>
